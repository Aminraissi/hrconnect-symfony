{% for label, messages in app.flashes %}
    {% for message in messages %}
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <script>
            Swal.fire({
                icon: '{{ label == "success" ? "success" : "error" }}',
                title: '{{ label|capitalize }}',
