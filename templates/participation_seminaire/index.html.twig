{% extends 'base.html.twig' %}

{% block title %}Liste des Participations aux SÃ©minaires{% endblock %}

{% block body %}
    <div class="container my-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h2 class="fw-bold mb-1">ðŸŽ“ Participations aux SÃ©minaires</h2>
                <p class="text-muted mb-0">{{ participation_seminaires|length }} participation(s) trouvÃ©e(s)</p>
            </div>
            <a href="{{ path('app_participation_seminaire_new') }}" class="btn btn-gradient">
                <i class="fas fa-plus-circle me-2"></i>Nouvelle Participation
            </a>
        </div>

        {% if participation_seminaires|length > 0 %}
            <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="bg-light">
                        <tr>
                            <th class="ps-4">â„–</th>
                            <th>Statut</th>
                            <th>Date d'inscription</th>
                            <th>Ã‰valuation</th>
                            <th>Certificat</th>
                            <th>ID EmployÃ©</th>
                            <th class="text-end pe-4">Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for p in participation_seminaires %}
                            <tr>
                                <td class="ps-4 fw-semibold">#{{ p.id }}</td>
                                <td>
                                    {% set statusStyles = {
                                        'prÃ©sent': {'color': 'success', 'icon': 'fas fa-check-circle'},
                                        'absent': {'color': 'danger', 'icon': 'fas fa-times-circle'},
                                        'Inscrit': {'color': 'info', 'icon': 'fas fa-file-signature'},
                                        'en attente': {'color': 'warning', 'icon': 'fas fa-hourglass-half'}
                                    } %}

                                    {% set status = statusStyles[p.statut] ?? { 'color': 'secondary', 'icon': 'fas fa-question-circle' } %}

                                    <span class="badge-outline badge-outline-{{ status.color }}">
                                        <i class="{{ status.icon }} me-1"></i>
                                        {{ p.statut|capitalize }}
                                    </span>
                                </td>
                                <td>{{ p.dateInscription ? p.dateInscription|date('d/m/Y') : 'â€”' }}</td>
                                <td class="text-center">
                                    {% if p.evaluation is not empty %}
                                        <div class="rating">
                                            {% for i in 1..5 %}
                                                <i class="fas fa-star{{ i <= p.evaluation ? ' text-warning' : ' text-muted' }}"></i>
                                            {% endfor %}
                                        </div>
                                    {% else %}
                                        <span class="text-muted">â€”</span>
                                    {% endif %}
                                </td>
                                <td>
                                    {% if p.certificat %}
                                        <span class="badge bg-soft-success text-success">
                                            <i class="fas fa-certificate me-1"></i>{{ p.certificat }}
                                        </span>
                                    {% else %}
                                        <span class="text-muted">â€”</span>
                                    {% endif %}
                                </td>
                                <td>
                                    <span class="badge bg-soft-primary text-primary">#{{ p.idEmploye }}</span>
                                </td>
                                <td class="text-end pe-4">
                                    <div class="btn-group">
                                        <a href="{{ path('app_participation_seminaire_show', {'id': p.id}) }}"
                                           class="btn btn-sm btn-outline-primary"
                                           data-bs-toggle="tooltip"
                                           title="Voir les dÃ©tails">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="{{ path('app_participation_seminaire_edit', {'id': p.id}) }}"
                                           class="btn btn-sm btn-outline-secondary"
                                           data-bs-toggle="tooltip"
                                           title="Modifier">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        {% else %}
            <div class="card border-0 shadow-sm rounded-4 p-5 text-center">
                <div class="py-5">
                    <div class="mb-4">
                        <i class="fas fa-clipboard-list fa-3x text-muted"></i>
                    </div>
                    <h3 class="fs-4">Aucune participation trouvÃ©e</h3>
                    <p class="text-muted">Ajoutez une nouvelle participation pour commencer.</p>
                    <a href="{{ path('app_participation_seminaire_new') }}" class="btn btn-gradient mt-3">
                        <i class="fas fa-plus-circle me-2"></i>Ajouter une participation
                    </a>
                </div>
            </div>
        {% endif %}
    </div>

    <style>
        /* Modern gradient button */
        .btn-gradient {
            background: linear-gradient(135deg, #6366f1, #8b5cf6);
            color: white;
            padding: 0.6rem 1.5rem;
            border: none;
            border-radius: 10px;
            font-weight: 500;
            transition: all 0.3s ease;
            box-shadow: 0 4px 12px rgba(99, 102, 241, 0.25);
        }

        .btn-gradient:hover {
            background: linear-gradient(135deg, #4f46e5, #7c3aed);
            box-shadow: 0 6px 16px rgba(99, 102, 241, 0.4);
            transform: translateY(-2px);
            color: white;
        }

        /* Table styling */
        .table th {
            font-weight: 600;
            font-size: 0.85rem;
            letter-spacing: 0.03em;
            border-top: none;
            border-bottom: 2px solid #f1f5f9;
            text-transform: uppercase;
            padding-top: 1rem;
            padding-bottom: 1rem;
        }

        .table td {
            padding-top: 1rem;
            padding-bottom: 1rem;
            vertical-align: middle;
            border-color: #f1f5f9;
        }

        /* Status badges */
        .badge-outline {
            display: inline-flex;
            align-items: center;
            padding: 0.35rem 0.85rem;
            border-radius: 30px;
            font-size: 0.8125rem;
            font-weight: 500;
            border: 1px solid;
            background-color: transparent;
            white-space: nowrap;
        }

        .badge-outline-success {
            color: #10b981;
            border-color: #10b981;
            background-color: rgba(16, 185, 129, 0.1);
        }

        .badge-outline-danger {
            color: #ef4444;
            border-color: #ef4444;
            background-color: rgba(239, 68, 68, 0.1);
        }

        .badge-outline-info {
            color: #06b6d4;
            border-color: #06b6d4;
            background-color: rgba(6, 182, 212, 0.1);
        }

        .badge-outline-warning {
            color: #f59e0b;
            border-color: #f59e0b;
            background-color: rgba(245, 158, 11, 0.1);
        }

        .badge-outline-secondary {
            color: #64748b;
            border-color: #64748b;
            background-color: rgba(100, 116, 139, 0.1);
        }

        /* Soft background badges */
        .bg-soft-primary {
            background-color: rgba(99, 102, 241, 0.1);
            padding: 0.35rem 0.75rem;
            border-radius: 6px;
        }

        .bg-soft-success {
            background-color: rgba(16, 185, 129, 0.1);
            padding: 0.35rem 0.75rem;
            border-radius: 6px;
        }

        /* Rating stars */
        .rating {
            display: inline-flex;
        }

        .rating .fa-star {
            font-size: 0.875rem;
        }

        /* Card styles */
        .rounded-4 {
            border-radius: 1rem;
        }

        /* Responsive adjustments */
        @media (max-width: 768px) {
            .btn-gradient {
                padding: 0.5rem 1rem;
            }

            .badge-outline {
                padding: 0.25rem 0.6rem;
                font-size: 0.75rem;
            }
        }
    </style>

    <script>
        // Initialize tooltips
        document.addEventListener('DOMContentLoaded', function() {
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl)
            })
        });
    </script>
{% endblock %}